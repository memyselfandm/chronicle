# Chronicle Dashboard Environment Configuration Template
# Copy this file to .env.local and configure for your environment
# For specific environments, use .env.development, .env.staging, or .env.production

# ===========================================
# ENVIRONMENT IDENTIFICATION (Required)
# ===========================================
# Environment type - affects all other settings
# Options: development, staging, production
NEXT_PUBLIC_ENVIRONMENT=development

# Application title (shown in browser tab and header)
NEXT_PUBLIC_APP_TITLE=Chronicle Observability

# ===========================================
# SUPABASE CONFIGURATION (Required)
# ===========================================
# Get these values from your Supabase project dashboard:
# 1. Go to https://supabase.com/dashboard
# 2. Select your project  
# 3. Navigate to Settings > API
# 4. Copy the values below

# Your Supabase project URL
NEXT_PUBLIC_SUPABASE_URL=https://your-project-ref.supabase.co

# Your Supabase anonymous/public key (safe for client-side use)
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here

# Optional: Service role key for server-side operations (KEEP SECRET)
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# ===========================================
# MONITORING & ERROR TRACKING (Optional)
# ===========================================
# Sentry configuration for error tracking
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ENVIRONMENT=development
SENTRY_DEBUG=false
SENTRY_SAMPLE_RATE=1.0
SENTRY_TRACES_SAMPLE_RATE=0.1

# Analytics configuration
NEXT_PUBLIC_ANALYTICS_ID=your-analytics-id
NEXT_PUBLIC_ENABLE_ANALYTICS_TRACKING=false

# ===========================================
# FEATURE FLAGS (Optional)
# ===========================================
# Enable real-time event streaming
NEXT_PUBLIC_ENABLE_REALTIME=true

# Enable advanced analytics features
NEXT_PUBLIC_ENABLE_ANALYTICS=true

# Enable data export functionality  
NEXT_PUBLIC_ENABLE_EXPORT=true

# Enable experimental features (staging/development only)
NEXT_PUBLIC_ENABLE_EXPERIMENTAL_FEATURES=false

# ===========================================
# PERFORMANCE SETTINGS (Optional)
# ===========================================
# Maximum number of events to display in the feed
NEXT_PUBLIC_MAX_EVENTS_DISPLAY=1000

# Event polling interval in milliseconds (fallback if real-time fails)
NEXT_PUBLIC_POLLING_INTERVAL=5000

# Batch size for event processing
NEXT_PUBLIC_BATCH_SIZE=50

# Real-time connection settings
NEXT_PUBLIC_REALTIME_HEARTBEAT_INTERVAL=30000
NEXT_PUBLIC_REALTIME_TIMEOUT=10000

# ===========================================
# DEVELOPMENT & DEBUGGING (Optional)
# ===========================================
# Enable debug mode for additional console logging
NEXT_PUBLIC_DEBUG=false

# Log level (error, warn, info, debug)
NEXT_PUBLIC_LOG_LEVEL=info

# Enable React DevTools profiler
NEXT_PUBLIC_ENABLE_PROFILER=false

# Show development tools in UI
NEXT_PUBLIC_SHOW_DEV_TOOLS=false

# Show environment badge in UI
NEXT_PUBLIC_SHOW_ENVIRONMENT_BADGE=true

# ===========================================
# UI CUSTOMIZATION (Optional)
# ===========================================
# Default theme (dark mode is primary design)
NEXT_PUBLIC_DEFAULT_THEME=dark

# ===========================================
# SECURITY SETTINGS (Production)
# ===========================================
# Enable Content Security Policy
NEXT_PUBLIC_ENABLE_CSP=false

# Enable security headers
NEXT_PUBLIC_ENABLE_SECURITY_HEADERS=false

# Rate limiting settings
NEXT_PUBLIC_ENABLE_RATE_LIMITING=false
NEXT_PUBLIC_RATE_LIMIT_REQUESTS=1000
NEXT_PUBLIC_RATE_LIMIT_WINDOW=900

# ===========================================
# ENVIRONMENT-SPECIFIC EXAMPLES
# ===========================================

# Development Example:
# NODE_ENV=development
# NEXT_PUBLIC_ENVIRONMENT=development
# NEXT_PUBLIC_SUPABASE_URL=https://dev-project.supabase.co
# NEXT_PUBLIC_DEBUG=true
# NEXT_PUBLIC_SHOW_DEV_TOOLS=true

# Staging Example:
# NODE_ENV=production
# NEXT_PUBLIC_ENVIRONMENT=staging
# NEXT_PUBLIC_SUPABASE_URL=https://staging-project.supabase.co
# NEXT_PUBLIC_DEBUG=true
# SENTRY_ENVIRONMENT=staging

# Production Example:
# NODE_ENV=production
# NEXT_PUBLIC_ENVIRONMENT=production
# NEXT_PUBLIC_SUPABASE_URL=https://prod-project.supabase.co
# NEXT_PUBLIC_DEBUG=false
# SENTRY_ENVIRONMENT=production
# NEXT_PUBLIC_SHOW_ENVIRONMENT_BADGE=false