# Chronicle Dashboard Environment Configuration
# Copy this file to .env.local and configure for your environment

# ===========================================
# SUPABASE CONFIGURATION (Required)
# ===========================================
# Get these values from your Supabase project dashboard:
# 1. Go to https://supabase.com/dashboard
# 2. Select your project  
# 3. Navigate to Settings > API
# 4. Copy the values below

# Your Supabase project URL
NEXT_PUBLIC_SUPABASE_URL=https://your-project-ref.supabase.co

# Your Supabase anonymous/public key (safe for client-side use)
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here

# ===========================================
# ENVIRONMENT SETTINGS (Optional)
# ===========================================

# Environment mode - affects logging and debug features
# Options: development, testing, staging, production
NEXT_PUBLIC_ENVIRONMENT=development

# Enable debug mode for additional console logging
# Options: true, false
NEXT_PUBLIC_DEBUG=false

# ===========================================
# FEATURE FLAGS (Optional)
# ===========================================

# Enable real-time event streaming
NEXT_PUBLIC_ENABLE_REALTIME=true

# Enable advanced analytics features
NEXT_PUBLIC_ENABLE_ANALYTICS=true

# Enable data export functionality
NEXT_PUBLIC_ENABLE_EXPORT=true

# ===========================================
# PERFORMANCE SETTINGS (Optional)
# ===========================================

# Maximum number of events to display in the feed
NEXT_PUBLIC_MAX_EVENTS_DISPLAY=1000

# Event polling interval in milliseconds (fallback if real-time fails)
NEXT_PUBLIC_POLLING_INTERVAL=5000

# ===========================================
# UI CUSTOMIZATION (Optional)
# ===========================================

# Application title (shown in browser tab)
NEXT_PUBLIC_APP_TITLE=Chronicle Observability

# Default theme (dark mode is primary design)
NEXT_PUBLIC_DEFAULT_THEME=dark

# ===========================================
# DEVELOPMENT SETTINGS (Development Only)
# ===========================================

# Mock data mode - use fake data instead of real database
# Useful for development without Supabase setup
NEXT_PUBLIC_MOCK_DATA=false

# Enable React DevTools profiler
NEXT_PUBLIC_ENABLE_PROFILER=false

# ===========================================
# EXAMPLE CONFIGURATIONS
# ===========================================

# Development Example:
# NEXT_PUBLIC_SUPABASE_URL=https://abcdefghijklmnopqrst.supabase.co
# NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJ0eXAiOiJKV1QiLCJhbGciOiJIUzI1NiJ9...
# NEXT_PUBLIC_ENVIRONMENT=development
# NEXT_PUBLIC_DEBUG=true
# NEXT_PUBLIC_MOCK_DATA=false

# Production Example:
# NEXT_PUBLIC_SUPABASE_URL=https://prod-xyz123.supabase.co
# NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJ0eXAiOiJKV1QiLCJhbGciOiJIUzI1NiJ9...
# NEXT_PUBLIC_ENVIRONMENT=production
# NEXT_PUBLIC_DEBUG=false
# NEXT_PUBLIC_ENABLE_PROFILER=false